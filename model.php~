}


class Answer extends Model
{
    protected $best = 1;
    protected $id;
    protected $name;
    protected $answer;
    protected $question_id;

    public function setId($v)
    {
        $this->id = $v;
        return $this;
    }

    public function getId()
    {
        return $this->id;
    }

    public function setName($v)
    {
        $this->name = mysql_escape_string($v);
        return $this;
    }

    public function getName()
    {
        return $this->name;
    }

    public function setAnswer($v)
    {
        $this->answer = mysql_escape_string($v);
        return $this;
    }

    public function getAnswer()
    {
        return $this->answer;
    }

    public function setQuestionId($v)
    {
        $this->question_id = $v;
        return $this;
    }

    public function getQuestionId()
    {
    return $this->question_id;
    }

    public function setAnswers($v)
    {
        $this->answers = $v;
        return $this;
    }

    public function getAnswers()
    {
        return $this->answers;
    }


    public function getAll($question_id)
    {
        $this->setQuestionId($question_id);
        $sql = "SELECT * FROM hariult WHERE asuult_id = '".$this->getQuestionId()."'
                ORDER BY best DESC";
        $this->setAnswers(parent::show($sql));
    }

