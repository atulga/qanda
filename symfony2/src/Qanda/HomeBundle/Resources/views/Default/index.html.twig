{% extends 'QandaHomeBundle::layout.html.twig' %}

{% block body %}
{% for question in questions %}
<div>
    <h4>
        <a href="{{ path("question_show", {'question_id': question.id}) }}"> 
            {{ question.title }}
            11
        </a>
    </h4>
    <div >
        <div>Нэр:{{ question.userId }}</div>
        <div>{{ question.createdDate.format('Y-m-d H:i:s')  }}</div>
    </div>
    <div>
        {{ question.question }}
    </div>
    <div >
        <div>Хариултаа авч чадсан эсэх:
            <b>
                {% if question.isAnswered() %}
                    Тийм
                {% else %}
                    Үгүй
                {% endif %}
            </b>
        </div>
        <div>Нийт хариултын тоо:{{ question.getAnswerCount }}</div>
    </div>
</div>
{% endfor %}

<ul class="pagination">
{% for page in pager.pages %}
    {% if pager.current_page == page %}
        <li class="active"><span>{{ page }}</span></li>
    {% else %}
        <li class="disabled">
            <a href="{{ path("question_list", {"page": page }) }}">
                {{ page }}
            </a>
        </li>
    {% endif %}
{% endfor %}
</ul>
{% endblock %}
